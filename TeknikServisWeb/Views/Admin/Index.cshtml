@model List<TeknikServis.Models.IdentityModels.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@section top
{
    <link rel="stylesheet" href="../../bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Data Table With Full Features</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Fotoğref</th>
                            <th>Kullanıcı İsmi</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Email</th>
                            <th>Aktif</th>
                            <th class="text-center" style="width: 10%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var data = Model[i];
                            <tr class="@(data.EmailConfirmed?"":"bg-red")">
                                <td class="text-center">@(i + 1)</td>
                                <td class="text-center">
                                    <img src="@(string.IsNullOrEmpty(data.AvatarPath)?"/dist/img/ZGlogo.jpg":data.AvatarPath)" class="img-circle" width="100" height="100" />
                                </td>
                                <td class="font-500">@data.UserName</td>
                                <td>@data.Name</td>
                                <td>@data.Surname</td>
                                <td>@data.Email</td>
                                <td>@Html.CheckBox("EmailConfirm", data.EmailConfirmed, new { disabled = "true" })</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <button class="btn btn-xs btn-default btnsendcode" name="@data.Id" type="button" title="Send Activation Code">
                                            <i class="ion-android-mail"></i>
                                        </button>
                                        <button class="btn btn-xs btn-default btnsendpassword" name="@data.Id" type="button" title="Send Password">
                                            <i class="ion-key"></i>
                                        </button>
                                        <a href="@Url.Action("EditUser", "Admin", new {id = data.Id})" class="btn btn-xs btn-default" title="Edit User">
                                            <i class="ion-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
@section bottom
{
    <script src="../../bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="../../bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jq-3.3.1/dt-1.10.18/af-2.3.2/b-1.5.4/b-colvis-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/cr-1.5.0/r-2.2.2/sc-1.5.0/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css" />

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/jq-3.3.1/dt-1.10.18/af-2.3.2/b-1.5.4/b-colvis-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/cr-1.5.0/r-2.2.2/sc-1.5.0/datatables.min.js"></script>


    <script>
        $(function () {
            $(".btnsendpassword").click(function() {
                var id = this.name;
                $.ajax({
                    url: "@Url.Action("SendPassword","Admin")",
                    method: "post",
                    dataType: "json",
                    data: {id:id}
                }).done(function (e) {
                    console.log(e);
                    $.notify({
                            // options
                            message: e.message,
                            title: 'Şifre'
                        },
                        {
                            // settings
                            type: e.success ? "success" : "danger"
                        });
                });
            });
            $(".btnsendcode").click(function() {
                var id =this.name;
                $.ajax({
                    url: "@Url.Action("SendCode","Admin")",
                    method: "post",
                    dataType: "json",
                    data: {id:id}
                }).done(function (e) {
                    console.log(e);
                    $.notify({
                            // options
                            message: e.message,
                            title: 'Aktivasyon Kodu'
                        },
                        {
                            // settings
                            type: e.success ? "success" : "danger"
                        });
                });
            });
            $('#example1').DataTable({
                //dom: 'Bfrtip',
                //buttons: [
                //    'copy', 'csv', 'excel', 'pdf', 'print'
                //]
            })

        });
    </script>
}

