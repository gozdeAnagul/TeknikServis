@model TeknikServis.Models.ViewModels.ArizaViewModel
@{
    ViewBag.Title = "GetArizaDetay";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="box box-warning">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                @if (TempData["Message"] != null)
                {
                    <h3><i class=" fa fa-exclamation-circle text-success" style="font-size:30px"></i>@TempData["Message"]</h3>
                }
                @using (Html.BeginForm("GetArizaDetay", "Teknisyen", FormMethod.Post))
                {
                    <ul class="timeline">
                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-red">
                                @Model.ArizaOlusturmaTarihi.ToShortDateString()
                            </span>
                        </li>
                        <li>
                            <i class="fa  fa-files-o bg-blue"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o">@Model.ArizaOlusturmaTarihi.ToShortTimeString()</i></span>

                                <h3 class="timeline-header"><b>Arıza Bilgileri</b></h3>

                                <div class="timeline-body">
                                    <label>Müşteri Adı  : </label>@Model.MusteriAdi<br />
                                    <label>Marka-Model :     </label>@Model.MarkaAdi - @Model.ModelAdi
                                    <br />
                                    <label>Müşteri Arıza Analizi :     </label>@Model.Aciklama
                                    <br />
                                    <label>Adres :     </label>@Model.Adres
                                    <br />
                                </div>

                            </div>
                        </li>

                        <li>
                            <i class="fa fa-camera bg-purple"></i>

                            <div class="timeline-item">

                                <div class="timeline-body">

                                    @for (int i = 0; i < Model.ArizaFotograflari.Count; i++)
                                    {
                                        var data = Model.ArizaFotograflari[i];
                                        <img src="@data" class="margin">
                                    }

                                </div>
                            </div>
                        </li>
                        <li>
                            <i class="fa  fa-files-o bg-green-gradient"></i>
                            <div class="timeline-item">
                                <div class="timeline-body">

                                    @Html.HiddenFor(x => x.Id)
                                    <div class="input-group col-md-6">
                                        @Html.CheckBoxFor(x => x.GarantiliVarMi) Garanti Var Mı?
                                    </div>
                                    <br />
                                    <label>Ücret: </label>
                                    <div class="input-group col-md-6">
                                        @Html.TextBoxFor(x => x.Ucret, new { @class = "form-control", placeholder = "Ucret" })
                                        <span class="input-group-addon">.00</span>
                                    </div>
                                    <br />
                                    <button type="submit" class="btn btn-default btn-default btnguncelle">Güncelle</button>

                                </div>
                            </div>
                        </li>
                        <li>
                            <i class="fa fa-clock-o bg-gray"></i>
                        </li>

                    </ul>
                }
                <br />
                <ul style="list-style-type:none">
                    <li>
                        <a class="btn btn-info btn-xs
                       " href="@Url.Action("GetAriza", "Teknisyen")"><i class=" fa fa-reply text-black"></i>Geri Git</a>
                    </li>
                </ul>

            </div>
            <!-- /.col -->
        </div>
    </section>
</div>


