@model List<TeknikServis.Models.ViewModels.ArizaViewModel>
@{
    ViewBag.Title = "GetEskiArizalar";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@for (int i = 0; i < Model.Count; i++)
{
    var data = Model[i];
    <div class="box box-warning">
        <section class="content">
            <div class="row">
                <div class="col-md-12">

                    <ul class="timeline">
                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-red">
                                @(data.ArizaOlusturmaTarihi.ToShortDateString())
                            </span> 
                            <span class="time"><i class="fa fa-clock-o">@data.ArizaOlusturmaTarihi.ToShortTimeString()</i></span>
                        </li>
                        <li>
                            <i class="fa  fa-files-o bg-blue"></i>
                            <div class="timeline-item">
                               

                                <h3 class="timeline-header"><b>Arıza Bilgileri</b></h3>

                                <div class="timeline-body">
                                    <label>Müşteri Adı:</label>@data.MusteriAdi<br />
                                    <label>Müşteri Adresi:</label>@data.Adres<br />
                                    <label>Marka-Model:</label>@data.MarkaAdi - @data.ModelAdi<br />
                                    <label>Müşteri Arıza Analizi:</label>@data.Aciklama<br />
                                    <label>Arıza Onay Tarihi:</label>@data.ArizaBaslangicTarihi<br />

                                    @if (@data.GarantiliVarMi == false)
                                    {
                                        <label>Garanti Durumu: Yok</label>
                                    }
                                    else
                                    {
                                        <label>Garanti Durumu: Var</label>
                                    }<br />
                                    <label>Ücret:</label>@data.Ucret<br />
                                    <br />
                                </div>
                            </div>
                        </li>

                        <li>
                            <i class="fa fa-camera bg-purple"></i>
                            
                            <div class="timeline-item">
                                <div class="timeline-body">
                                  <h5><b>Arıza Fotoğrafları</b></h5>
                                    @if (data.ArizaFotograflari != null)
                                    {
                                        for (int y = 0; y < data.ArizaFotograflari.Count; y++)
                                        {
                                            var foto = data.ArizaFotograflari[y];
                                            <img src="@foto" class="margin">
                                        }
                                    }

                                </div>
                            </div>
                        </li>
                        <li class="time-label">
                            <span class="bg-red">
                                @data.ArizaBitisTarihi.ToShortDateString()
                            </span>
                            <span class="time"><i class="fa fa-clock-o">@data.ArizaBitisTarihi.ToShortTimeString()</i></span>
                        </li>
                        <li>
                            <i class="fa fa-clock-o bg-gray"></i><br />
                        </li>

                    </ul>

                    <br />
                </div>
                <!-- /.col -->
            </div>
        </section>
    </div>
}

