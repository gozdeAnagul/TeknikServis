@model TeknikServis.Models.ViewModels.ArizaViewModel
@{
    ViewBag.Title = "ArizaBildirimi";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="box box-warning">
    <div class="box-header with-border">
        <h2 class="box-title">Arıza Kaydı Oluşturma Formu</h2>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> @TempData["Message"]</h4>    
        </div>

    }
        <div class="box-body">
            @using (Html.BeginForm("ArizaBildirimi", "Musteri", FormMethod.Post,new { enctype="multipart/form-data"}))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(x => x.Adres)
                    @Html.TextAreaFor(x => x.Adres, new { @class = "form-control", placeholder = "Adresinizi giriniz." })
                    <br /><span class="text-red">@Html.ValidationMessageFor(x => x.Adres)</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.MarkaAdi)
                    @Html.TextBoxFor(x => x.MarkaAdi, new { @class = "form-control", placeholder = "Marka giriniz." })
                    <br /><span class="text-red">@Html.ValidationMessageFor(x => x.MarkaAdi)</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ModelAdi)
                    @Html.TextBoxFor(x => x.ModelAdi, new { @class = "form-control", placeholder = "Model giriniz." })
                    <br /><span class="text-red">@Html.ValidationMessageFor(x => x.ModelAdi)</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.PostedFile)
                    @Html.TextBoxFor(x => x.PostedFile, new { @class = "form-control", type = "file", multiple = true })
                    <br /><span class="text-red">@Html.ValidationMessageFor(x => x.UserProfileViewModel.PostedFile)</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Aciklama)
                    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Açıklama giriniz." })
                    <br /><span class="text-red">@Html.ValidationMessageFor(x => x.Aciklama)</span>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Kayıt Oluştur</button>
                </div>

            }


        </div>

</div>