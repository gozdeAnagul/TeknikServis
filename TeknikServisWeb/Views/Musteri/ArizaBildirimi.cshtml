@model TeknikServis.Models.ViewModels.UserMarkaModelViewModel
@{
    ViewBag.Title = "ArizaBildirimi";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Arıza Kaydı Oluşturma Formu</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm("ArizaBildirimi", "Musteri", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
       
            <div class="form-group">
                @Html.LabelFor(x => x.Adress)
                @Html.TextAreaFor(x => x.Adress, new { @class = "form-control", placeholder = "Adresinizi giriniz." })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.MarkaModelViewModel.Marka)
                @Html.TextBoxFor(x => x.MarkaModelViewModel.Marka, new { @class = "form-control", placeholder = "Marka giriniz." })
