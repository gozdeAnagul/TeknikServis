                    <option>option 5</option>
                </select>*@
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.MarkaModelViewModel.Model)
                @Html.TextBoxFor(x => x.MarkaModelViewModel.Model, new { @class = "form-control", placeholder = "Model giriniz." })
                @*@Html.LabelFor(x => x.MarkaModelViewModel.Model)
                <select class="form-control">
                    <option>option 1</option>
                    <option>option 2</option>
                    <option>option 3</option>
                    <option>option 4</option>
                    <option>option 5</option>
                </select>*@
            </div>
            <!-- textarea -->

            <div class="form-group">
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Adresinizi giriniz." })
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Kayıt Oluştur</button>
            </div>
        }
    </div>

</div>