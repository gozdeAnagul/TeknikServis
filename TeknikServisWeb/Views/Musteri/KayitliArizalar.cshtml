@using TeknikServis.Models.Enums;
@model List<TeknikServis.Models.ViewModels.UserMarkaModelViewModel>
@{
    ViewBag.Title = "KayitliArizalar";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Kayıtlı Arızalarım</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Ekleme Tarihi</th>
                            <th>Teknisyen Adı</th>
                            <th>Teknisyen Durumu</th>
                            <th>Arıza Onay Durumu</th>
                            <th>Ücret</th>

                        </tr>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var data = Model[i];
                            <tr>
                                <td class="text-center">@(i + 1)</td>

                                <td>@data.EklemeTarihi</td>
                                <td>@data.TeknisyenAdi</td>
                                <td>
                                    @if (data.TeknisyenDurumu == TeknisyenDurumu.Beklemede)
                                    {<span class="label label-danger" style="font-size:13px;">@data.TeknisyenDurumu</span>}
                                    @if (data.TeknisyenDurumu == TeknisyenDurumu.Atandı)
                                    {<span class="label label-info" style="font-size:13px;">@data.TeknisyenDurumu</span>}
                                    @if (data.TeknisyenDurumu == TeknisyenDurumu.Yolda)
                                    {<span class="label label-warning" style="font-size:13px;">@data.TeknisyenDurumu</span>}
                                    @if (data.TeknisyenDurumu == TeknisyenDurumu.Ulasti)
                                    {<span class="label label-success" style="font-size:13px;">@data.TeknisyenDurumu</span>}
                                </td>
                                @* eve gidince ,if yaz *@
                                <td>@(data.ArizaOnaylandiMi == true ? "Onaylandı" : "Onaylanmadı")</td>
                                <td>@data.Ucret</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

