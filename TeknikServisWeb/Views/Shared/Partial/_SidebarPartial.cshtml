@using TeknikServis.BLL.Identity;
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar" style="height: auto;">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="@MembershipTools.GetAvatarPath(null)" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@MembershipTools.GetNameSurname(null)</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu tree" data-widget="tree">
            @if (User.IsInRole("GenelYonetici"))
            {
                <li><a href="@Url.Action("Index","Admin")"> <i class="fa fa-circle-o text-aqua"></i> <span class="menu-title">Anasayfa</span></a></li>
                <li><a href="@Url.Action("GetUsers","Admin")"> <i class="fa fa-circle-o text-red"></i> <span class="menu-title">Kullanıcı Düzenle</span></a></li>
                <li><a href="@Url.Action("GetMarkaModel","Admin")"> <i class="fa fa-circle-o text-yellow"></i> <span class="menu-title">Marka ve Model Ekleme</span></a></li>

            }
            @if (User.IsInRole("Operator"))
            {
                <li><a href="@Url.Action("Index","Operator")"> <i class="fa fa-circle-o text-aqua"></i> <span class="menu-title">Anasayfa</span></a></li>
                <li><a href="@Url.Action("Arizalar","Operator")"> <i class="fa fa-circle-o text-red"></i> <span class="menu-title">Ariza Yönetimi</span></a></li>
                @*<li><a href="@Url.Action("GetMarkaModel","Admin")"> <i class="fa fa-circle-o text-yellow"></i> <span class="menu-title">Marka ve Model Ekleme</span></a></li>*@
            }

            @if (User.IsInRole("Teknisyen"))
            {
                <li><a href="@Url.Action("Index","Teknisyen")"> <i class="fa fa-circle-o text-aqua"></i> <span class="menu-title">Anasayfa</span></a></li>
                <li><a href="@Url.Action("GetAriza","Teknisyen")"> <i class="fa fa-circle-o text-red"></i> <span class="menu-title">Arızalar</span></a></li>
                @*<li><a href="@Url.Action("GetMarkaModel","Admin")"> <i class="fa fa-circle-o text-yellow"></i> <span class="menu-title">Marka ve Model Ekleme</span></a></li>*@
            }
            @if (User.IsInRole("Musteri"))
            {
                <li><a href="@Url.Action("Index","Musteri")"> <i class="fa fa-circle-o text-aqua"></i> <span class="menu-title">Anasayfa</span></a></li>
                <li><a href="@Url.Action("ArizaBildirimi","Musteri")"> <i class="fa fa-circle-o text-red"></i> <span class="menu-title">Ariza Kaydı Oluştur</span></a></li>
                <li><a href="@Url.Action("KayitliArizalar","Musteri")"> <i class="fa fa-circle-o text-yellow"></i> <span class="menu-title">Kayıtlı Arızalar</span></a></li>
            }
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

